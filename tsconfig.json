{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES2020",
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "out",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  },
  "exclude": ["node_modules", "out", "vendor"]
}
